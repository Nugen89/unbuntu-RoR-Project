<h1>Listing resources</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Topic</th>
    <th>Price</th>
    <th>Content</th>
    <th>Image</th>
    <th>Image Thumbnail</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user.resources.each do |resource| %>
  <tr>
    <td><%= resource.title %></td>
    <td><%= resource.topic %></td>
    <td><%= resource.price %></td>
    <td><%= resource.content %></td>
    <td><%= resource.image %></td>
    <td><%= image_tag resource.image_url(:thumb).to_s %></td>
     <td><%= link_to 'Show', user_resource_path(current_user.id, resource.id) %></td>
    <td><%= link_to 'Edit', edit_user_resource_path(current_user.id, resource.id) %></td>
    <td><%= link_to 'Destroy', "resource, method: :delete, data: { confirm: 'Are you sure?' }" %></td> 
  </tr>
<% end %>
</table>

